                            <button type="submit" class="btn-style cr-btn">
                            <span>Create wish</span>
                            </button>
                            </div>
                            </form>*@
                    </div>
              
            </div>
        </div>
        <div class="col-lg-6">
            <div class="qwick-view-content">
                <div class="text-center">
                    <div class="tab-pane active show fade mt-10" id="modal1" role="tabpanel">
                        <img src="~/Content/assets/img/wish-details/details8-s1.jpg" alt="" />
                    </div>
                    <div class="button-box mt-20">
                        <a class="action-plus btn-style cr-btn btn-wish-add" title="Quick View" href="#">
                            <span>Open..</span>
